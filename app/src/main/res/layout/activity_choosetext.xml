<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosetextActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainLayout">

        <!--        <WebView-->
        <!--            android:layout_width="250dp"-->
        <!--            android:layout_height="150dp"-->
        <!--            android:id="@+id/webView"/>-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/lightblue"
            android:hint="put smth" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:id="@+id/loadSavedTextTv"
                android:background="@color/lightblue1"
                android:textIsSelectable="true"
                android:hint="сохранённый файл"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveTextBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_darkblue_pressed_bluegray"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:text="загрузить" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/lightblue1">
            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:id="@+id/quieryEt"
                android:hint="search word..."/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="load"
                android:id="@+id/loadFromDictBtn"/>

        </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dataFromDict"
    android:background="@color/lightblue"/>
    </ScrollView>
</LinearLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<com.google.android.flexbox.FlexboxLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btnLayout"
    android:orientation="horizontal"
    app:flexDirection="row"
    app:justifyContent="space_between"
    app:flexWrap="wrap">

</com.google.android.flexbox.FlexboxLayout>
    </ScrollView>
    </LinearLayout>

</RelativeLayout>